{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020"
		],
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"*.ts",
		"**/*.ts",
		"*/*/*.ts",
		"*.js",
		"**/*.js",
		"*/*/*.js"
	],
	"exclude": [
		"node_modules"
	],
	"esm": true
}
